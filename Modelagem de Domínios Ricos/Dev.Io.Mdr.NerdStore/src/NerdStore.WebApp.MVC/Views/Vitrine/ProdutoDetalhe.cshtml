@model NerdStore.Catalogo.Application.ViewModels.ProdutoViewModel
@{
    ViewData["Title"] = "Produto Detalhe";
}

<style>
    ul > li {
        cursor: pointer;
        font-weight: lighter;
        margin-right: 25px;
    }

    li.active { border-bottom: 3px solid silver; }

    .item-photo {
        align-items: center;
        border-right: 1px solid #f6f6f6;
        display: flex;
        justify-content: center;
    }

    .menu-items {
        display: inline-flex;
        font-size: 11px;
        list-style-type: none;
        margin-bottom: 0;
        margin-top: 20px
    }

    .btn-success {
        border-radius: 0;
        width: 100%;
    }

    .section {
        background: #f8f9f9;
        margin-left: -15px;
        padding: 2px;
        padding-left: 15px;
        padding-right: 15px;
        width: 100%;
    }

    .title-price {
        color: black;
        margin-bottom: 0;
        margin-top: 30px;
    }

    .title-attr {
        color: black;
        margin-bottom: 0;
        margin-top: 0;
    }

    .btn-minus {
        align-items: center;
        border: 1px solid gray;
        border-radius: 2px;
        border-right: 0;
        cursor: pointer;
        display: flex;
        font-size: 7px;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
    }

    .btn-plus {
        align-items: center;
        border: 1px solid gray;
        border-left: 0;
        border-radius: 2px;
        cursor: pointer;
        display: flex;
        font-size: 7px;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
    }

    div.section > div {
        display: inline-flex;
        width: 100%;
    }

    div.section > div > input {
        font-size: 10px;
        margin: 0;
        max-width: 18%;
        padding-left: 5px;
        padding-right: 5px;
        text-align: center;
    }

    .attr, .attr2 {
        border: 1px solid gray;
        border-radius: 2px;
        cursor: pointer;
        font-size: 10px;
        height: 20px;
        margin-right: 5px;
        padding: 2px;
    }

    .attr.active, .attr2.active { border: 1px solid orange; }

    @@media (max-width: 426px) {
        .container { margin-top: 0px !important; }

        .container > .row { padding: 0 !important; }

        .container > .row > .col-xs-12.col-sm-5 { padding-right: 0; }

        .container > .row > .col-xs-12.col-sm-9 > div > p {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }

        .container > .row > .col-xs-12.col-sm-9 > div > ul { padding-left: 10px !important; }

        .section { width: 104%; }

        .menu-items { padding-left: 0; }
    }
</style>
<div class="container">

    <vc:summary/>

    <div class="row">
        <div class="col-xs-4 item-photo">

            <img width="400" height="400" src="~/Images/@Model.Imagem"/>
        </div>
        <div class="col-xs-5" style="border: 20px solid white">
            <h3>@Model.Nome</h3>

            <h6 class="title-price">
                <small>OFERTA</small>
            </h6>
            <h3 style="margin-top: 0px;">@Model.Valor.ToString("C")</h3>

            <p>Apenas @Model.QuantidadeEstoque em estoque!</p>
            <p>@Model.Descricao</p>
            <form method="post" asp-controller="Carrinho" asp-action="AdicionarItem">

                <input type="hidden" id="Id" name="Id" value="@Model.Id"/>

                <div class="section" style="padding-bottom: 20px;">
                    <h6 class="title-attr">
                        <small>QUANTIDADE</small>
                    </h6>
                    <div>
                        <div class="btn-minus">
                            <span style="font-size: 15px">-</span>
                        </div>
                        <input id="quantidade" name="quantidade" style="font-size: 15px" type="text" value="1"/>
                        <div class="btn-plus">
                            <span style="font-size: 15px">+</span>
                        </div>
                    </div>
                </div>

                <!-- Botoes de compra -->
                <div class="section" style="padding-bottom: 20px;">
                    <button type="submit" class="btn btn-success"><span style="margin-right: 20px" aria-hidden="true"></span> Comprar agora!</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        $(document).ready(function() {
            //-- Click on detail
            $("ul.menu-items > li").on("click",
                function() {
                    $("ul.menu-items > li").removeClass("active");
                    $(this).addClass("active");
                });

            $(".attr,.attr2").on("click",
                function() {
                    var clase = $(this).attr("class");

                    $("." + clase).removeClass("active");
                    $(this).addClass("active");
                });

            //-- Click on QUANTITY
            $(".btn-minus").on("click",
                function() {
                    var now = $(".section > div > input").val();
                    if ($.isNumeric(now)) {
                        if (parseInt(now) - 1 > 0) {
                            now--;
                        }
                        $(".section > div > input").val(now);
                    } else {
                        $(".section > div > input").val("1");
                    }
                });
            $(".btn-plus").on("click",
                function() {
                    var now = $(".section > div > input").val();
                    if ($.isNumeric(now)) {
                        $(".section > div > input").val(parseInt(now) + 1);
                    } else {
                        $(".section > div > input").val("1");
                    }
                });
        })
    </script>
}